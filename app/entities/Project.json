{
  "name": "Project",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Project name"
    },
    "description": {
      "type": "string",
      "description": "Project description"
    },
    "github_url": {
      "type": "string",
      "description": "GitHub repository URL"
    },
    "demo_url": {
      "type": "string",
      "description": "Live demo URL"
    },
    "image_url": {
      "type": "string",
      "description": "Project screenshot URL"
    },
    "technologies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Technologies used"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "description": "Whether to feature this project"
    }
  },
  "required": [
    "name",
    "description"
  ]
}